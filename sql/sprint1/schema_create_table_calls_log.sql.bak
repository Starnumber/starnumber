-- Table to create calls log

DROP TABLE IF EXISTS STARNUMBER.CALLS_LOG;

CREATE TABLE  STARNUMBER.CALLS_LOG (
   call_log_ID SERIAL,
   CALL_START_DATE DATE,
   CALL_START_TIME TIME,
   CALL_END_DATE DATE,
   CALL_END_TIME TIME,   
  create_time DATE,
  last_update_time DATE,
  CODEC_ID INT,
  REDIRECT_TYPE_ID INT REFERENCES STARNUMBER.REDIRECT_TYPE (ID),
  DESTINATION_TYPE_ID INT REFERENCES STARNUMBER.DESTINATION_TYPE (ID),
  CALLER_IP VARCHAR(256),
  DESTINATION_ADDRESS VARCHAR(256),
  from_caller_URI VARCHAR(256),
  from_display_name VARCHAR(256),
  DIALED_SN VARCHAR(256)
);

COMMENT ON TABLE STARNUMBER.CALLS_LOG IS 'Master table of all logged calls. ';

commit;


